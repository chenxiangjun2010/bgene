{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "baseUrl": "src/",
        "paths": {
            "@shared": [
                "app/shared"
            ],
            "@shared/*": [
                "app/shared/*"
            ],
            "@domain": [
                "app/domain"
            ],
            "@domain/*": [
                "app/domain/*"
            ],
            "@services": [
                "app/services"
            ],
            "@services/*": [
                "app/services/*"
            ],
            "@core": [
                "app/core/"
            ],
            "@core/*": [
                "app/core/*"
            ],
            "@testing": [
                "testing/"
            ],
            "@testing/*": [
                "testing/*"
            ],
            "@env": [
                "environments/"
            ],
            "@env/*": [
                "environments/*"
            ]
        }
    }
}